@model IEnumerable<proctos.Models.Material>

@{
    ViewBag.Title = "Manage Materials";
}

<h1>Manage Materials</h1>
<a href="@Url.Action("AddMaterial", "Admin")" class="btn btn-success">Add Material</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Material Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.IdMaterial</td>
                <td>@material.Material1</td>
                <td>
                    <a href="@Url.Action("EditMaterial", "Admin", new { id = material.IdMaterial })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteMaterial", "Admin", new { id = material.IdMaterial })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
