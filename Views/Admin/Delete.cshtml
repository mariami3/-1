@model proctos.Models.User

<h2>Удалить пользователя</h2>
<p>Вы уверены, что хотите удалить пользователя <strong>@Model.FullName</strong>?</p>

<form asp-action="DeleteUser" method="post">
    <input type="hidden" asp-for="IdUser" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Users", "Admin")">Отмена</a>
</form>
