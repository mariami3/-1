@model IEnumerable<proctos.Models.User>

<h2>Пользователи</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>ФИО</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.IdUser</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@(user.RoleId == 1 ? "Customer" : "OtherRole")</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("EditUser", "Admin", new { id = user.IdUser })">Редактировать</a>
                    <a class="btn btn-danger" href="@Url.Action("DeleteUser", "Admin", new { id = user.IdUser })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("AddUser", "Admin")">Добавить нового пользователя</a>
