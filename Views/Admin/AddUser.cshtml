@model proctos.Models.User

<h2>Добавить пользователя</h2>
<form asp-action="AddUser" method="post">
    <div class="form-group">
        <label>Логин</label>
        <input type="text" asp-for="LoginUser" class="form-control" />
    </div>
    <div class="form-group">
        <label>ФИО</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Роль</label>
        <select asp-for="RoleId" class="form-control">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.IdRole">@role.RoleName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Добавить</button>
    <a class="btn btn-secondary" href="@Url.Action("Users", "Admin")">Отмена</a>
</form>
