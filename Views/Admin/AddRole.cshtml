@model proctos.Models.Role

@{
    ViewBag.Title = "Add Role";
}

<h1>Add Role</h1>

<form asp-action="AddRole" method="post">
    <div class="form-group">
        <label for="RoleName">Role Name</label>
        <input type="text" class="form-control" id="RoleName" name="RoleName" value="@Model?.RoleName" required>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a href="@Url.Action("ManageRoles", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
