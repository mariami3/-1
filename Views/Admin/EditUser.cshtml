@model proctos.Models.User

<h2>Редактировать пользователя</h2>
<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="IdUser" />
    <div class="form-group">
        <label>ФИО</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Логин</label>
        <input type="text" asp-for="LoginUser" class="form-control" />
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input type="password" asp-for="PasswordHash" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Роль</label>
        <select asp-for="RoleId" class="form-control">
            <option value="1">Customer</option>
            <option value="2">OtherRole</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="@Url.Action("Users", "Admin")">Отмена</a>
</form>
